{
  "containerEnv": {
    "GIT_EDITOR": "vim",
    "PAGER": "less -F -X",
    "UV_LINK_MODE": "copy",
    "VISUAL": "vim"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "apollographql.vscode-apollo",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "inferrinizzard.prettier-sql-vscode",
        "ms-ossdata.vscode-pgsql",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "[sql]": {
          "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "claudeCode.initialPermissionMode": "default",
        "claudeCode.preferredLocation": "panel",
        "claudeCode.respectGitIgnore": true,
        "claudeCode.useTerminal": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "always",
          "source.sort.json": "always"
        },
        "editor.foldingMaximumRegions": 65000,
        "editor.formatOnSave": true,
        "editor.largeFileOptimizations": false,
        "editor.tabSize": 2,
        "eslint.enable": true,
        "eslint.useFlatConfig": true,
        "evenBetterToml.completion.maxKeys": 5,
        "evenBetterToml.formatter.alignComments": true,
        "evenBetterToml.formatter.alignEntries": true,
        "evenBetterToml.formatter.allowedBlankLines": 2,
        "evenBetterToml.formatter.arrayAutoExpand": true,
        "evenBetterToml.formatter.arrayTrailingComma": true,
        "evenBetterToml.formatter.columnWidth": 50,
        "evenBetterToml.formatter.reorderArrays": true,
        "evenBetterToml.formatter.reorderInlineTables": true,
        "evenBetterToml.formatter.reorderKeys": true,
        "evenBetterToml.formatter.trailingNewline": true,
        "github.copilot.chat.agent.autoFix": true,
        "github.copilot.chat.agent.currentEditorContext.enabled": true,
        "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
        "github.copilot.chat.languageContext.fix.typescript.enabled": false,
        "github.copilot.chat.languageContext.inline.typescript.enabled": false,
        "github.copilot.chat.languageContext.typescript.enabled": false,
        "gitlens.plusFeatures.enabled": false,
        "gitlens.rebaseEditor.openOnPausedRebase": false,
        "pgsql.copilot.accessMode": "ro",
        "pgsql.copilot.enable": true,
        "Prettier-SQL.expressionWidth": 80,
        "Prettier-SQL.ignoreTabSettings": true,
        "Prettier-SQL.keywordCase": "upper",
        "Prettier-SQL.SQLFlavourOverride": "postgresql",
        "Prettier-SQL.tabSizeOverride": 2,
        "prettier.arrowParens": "always",
        "prettier.bracketSameLine": false,
        "prettier.bracketSpacing": true,
        "prettier.configPath": "/workspace/.prettierrc.json",
        "prettier.enable": true,
        "prettier.experimentalTernaries": true,
        "prettier.jsxSingleQuote": true,
        "prettier.printWidth": 80,
        "prettier.quoteProps": "consistent",
        "prettier.requireConfig": true,
        "prettier.semi": false,
        "prettier.singleQuote": true,
        "prettier.tabWidth": 2,
        "prettier.trailingComma": "all",
        "prettier.useTabs": false,
        "python.analysis.addHoverSummaries": true,
        "python.analysis.autoFormatStrings": true,
        "python.analysis.autoImportCompletions": true,
        "python.analysis.autoIndent": true,
        "python.analysis.autoSearchPaths": true,
        "python.analysis.autoSplitStrings": true,
        "python.analysis.diagnosticMode": "workspace",
        "python.analysis.enablePytestSupport": true,
        "python.analysis.enableTroubleshootMissingImports": true,
        "python.analysis.exclude": [
          "/workspace/agent/.venv",
          "/workspace/agent/src/agent/graphql_client",
          "/workspace/node_modules"
        ],
        "python.analysis.extraPaths": [
          "/workspace/agent/src"
        ],
        "python.analysis.generateWithTypeAnnotation": true,
        "python.analysis.gotoDefinitionInStringLiteral": true,
        "python.analysis.ignore": [
          "/workspace/agent/.venv",
          "/workspace/agent/src/agent/graphql_client",
          "/workspace/node_modules"
        ],
        "python.analysis.importFormat": "absolute",
        "python.analysis.indexing": true,
        "python.analysis.inlayHints.callArgumentNames": "all",
        "python.analysis.inlayHints.functionReturnTypes": true,
        "python.analysis.inlayHints.pytestParameters": true,
        "python.analysis.inlayHints.variableTypes": true,
        "python.analysis.languageServerMode": "full",
        "python.analysis.persistAllIndices": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.typeEvaluation.strictDictionaryInference": true,
        "python.analysis.typeEvaluation.strictListInference": true,
        "python.analysis.typeEvaluation.strictParameterNoneValue": true,
        "python.analysis.typeEvaluation.strictSetInference": true,
        "python.defaultInterpreterPath": "/workspace/agent/.venv/bin/python3.14",
        "python.pythonPath": "/workspace/agent/.venv/bin/python3.14",
        "python.terminal.activateEnvironment": false,
        "python.venvPath": "/workspace/agent/.venv",
        "remote.autoForwardPorts": false,
        "ruff.configurationPreference": "filesystemFirst",
        "ruff.exclude": [
          "/workspace/agent/.venv",
          "/workspace/agent/src/agent/graphql_client",
          "/workspace/node_modules"
        ],
        "terminal.integrated.fontLigatures.enabled": true,
        "workbench.editorLargeFileConfirmation": 200
      }
    }
  },
  "dockerComposeFile": "docker-compose.yml",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [
    4000, // GraphQL server
    4001, // GraphQL MCP server
    4002, // Pydantic MCP Python server
    4003 // Grafana
  ],
  "name": "Stellaris Stats Dev Container",
  "postCreateCommand": ". .devcontainer/post-create-command.sh",
  "service": "devcontainer",
  "workspaceFolder": "/workspace"
}